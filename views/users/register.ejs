<% layout('layouts/boilerplate') %>
<style>
    @media screen and (max-width:900px){
    #mainNavbar{ 
            background-color: #e9d8a6;
    }
    }
    </style>
<div class="container d-flex align-items-center mt-5" style="margin-top: 100px;">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow ">
                <img src="https://assets-in.bmscdn.com/nmcms/events/banner/desktop/media-desktop-tata-indian-premier-league-2022-0-2022-3-23-t-15-8-34.jpg"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Register</h5>
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="firstName">First Name</label>
                            <input class="form-control" type="text" id="firstName" name="firstName" required autofocus>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="lastName">Last Name</label>
                            <input class="form-control" type="text" id="lastName" name="lastName" required autofocus>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" required autofocus>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="email" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <button class="btn btn-success btn-block">Register</button>
                        <a id="login" href="/login" class="d-inline ms-3">Already a user?</a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>